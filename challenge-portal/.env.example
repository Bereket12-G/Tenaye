# Environment Variables for Challenge Portal
# Copy this file to .env.local and modify as needed

# App Configuration
VITE_APP_TITLE=Challenge Portal
VITE_APP_DESCRIPTION=Wellness challenges and progress tracking
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# API Configuration (if needed in future)
# VITE_API_BASE_URL=https://api.example.com
# VITE_API_KEY=your_api_key_here

# Social Media (for sharing)
VITE_SOCIAL_TITLE=Challenge Portal
VITE_SOCIAL_DESCRIPTION=Track your wellness journey with fun challenges
VITE_SOCIAL_IMAGE=/og-image.png

# Performance
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_DURATION=3600